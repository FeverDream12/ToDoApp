<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ToDoApp.AppWidget.Container"
    android:id="@+id/homescreen_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ToDoApp.AppWidgetContainer">

    <TextView
        android:id="@+id/todayTaskCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Задачи на сегодня:"
        android:textSize="20sp"
        android:textColor="#216578"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/todayTasksList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginStart="3dp"
        android:text=""
        android:textSize="18sp" />

</RelativeLayout>