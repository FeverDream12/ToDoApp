<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    android:background="?colorSecondary"
    app:cardCornerRadius="12dp"
    android:elevation="1dp"
    android:id="@+id/audioNotesCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/audiNoteTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Заголовок"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="?colorPrimary"
                    android:textSize="18sp"
                    />

                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/star_24" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_circle_24"/>

            <ImageView
                android:id="@+id/pauseButton"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pause_circle_24"/>

            <ImageView
                android:id="@+id/loadingButton"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loading_circle_24"/>

            <SeekBar
                android:id="@+id/audioSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/durationTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:text=""/>

<!--            <ImageView-->
<!--                android:id="@+id/audioToTextButton"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/audio_to_text_24"-->
<!--                android:layout_gravity="center_vertical"/>-->

        </LinearLayout>

        <TextView
            android:id="@+id/audioNoteText"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Текст"
            android:layout_alignParentStart="true"
            android:textColor="?colorSecondaryVariant"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/audioNoteDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата"
            android:layout_alignParentStart="true"
            android:textColor="?colorOnSecondary"
            android:textSize="13sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>